{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --silent",
    "test:watch": "NODE_ENV=test jest --watch --silent",
    "test:coverage": "NODE_ENV=test jest --coverage --silent",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "migrate": "node migrations/productos.js && node migrations/tablas.js"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/routes/"
    ],
    "forceExit": true,
    "detectOpenHandles": true,
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testTimeout": 30000,
    "verbose": false,
    "silent": true,
    "collectCoverage": false,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "auth/**/*.js",
      "config/**/*.js",
      "!config/swagger.js",
      "!**/node_modules/**",
      "!**/__tests__/**"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "pg": "^8.16.0",
    "sequelize": "^6.37.7",
    "transbank-sdk": "^6.0.0"
  },
  "devDependencies": {
    "jest": "^30.0.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}